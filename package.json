{
  "name": "sideline",
  "displayName": "Sideline - Live Sports Scores",
  "description": "Keep track of your favorite sports games without leaving VS Code",
  "version": "0.0.7",
  "publisher": "dlandman27",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlandman27/sideline.git"
  },
  "icon": "sideline_logomark.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "configuration": {
    "title": "Sideline - Live Sports Scores",
    "properties": {
      "sideline.refreshInterval": {
        "type": "number",
        "default": 30,
        "minimum": 10,
        "maximum": 300,
        "description": "How often to refresh tracked games (in seconds). Minimum 10 seconds, maximum 5 minutes."
      }
    }
  },
  "activationEvents": [
    "onCommand:sideline.openPanel",
    "onView:sidelineTracked"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sideline.openPanel",
        "title": "View Live Sports Scores",
        "category": "Sideline"
      },
      {
        "command": "sideline.refresh",
        "title": "Refresh Live Sports Scores",
        "category": "Sideline"
      },
      {
        "command": "sideline.tailGame",
        "title": "Tail Game",
        "category": "Sideline"
      },
      {
        "command": "sideline.showTrackedGames",
        "title": "Show Tracked Games",
        "category": "Sideline"
      },
      {
        "command": "sideline.stopTracking",
        "title": "Stop Tracking",
        "category": "Sideline"
      },
      {
        "command": "sideline.openTrackedGamesPanel",
        "title": "Open Tracked Games Panel",
        "category": "Sideline"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sideline.openPanel",
          "when": "view == sidelineTracked",
          "group": "navigation"
        },
        {
          "command": "sideline.openPanel",
          "when": "view == sidelineTrackedSecondary",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "sideline": [
        {
          "id": "sidelineTracked",
          "name": "Sideline",
          "type": "webview",
          "when": "true"
        }
      ],
      "explorer": [
        {
          "id": "sidelineTrackedSecondary",
          "name": "Sideline",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sideline",
          "title": "Sideline",
          "icon": "$(sports-soccer)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
